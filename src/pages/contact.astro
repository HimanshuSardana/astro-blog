---
import Navbar from "./components/Navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Me | Himanshu Sardana</title>
  </head>
  <body class="bg-zinc-800 text-white">
    <Navbar />
    <div class="leading-3 w-1/2 mx-auto my-40">
      <div class="text flex flex-row gap-5 items-end">
        <span class="text-7xl font-black">Contact Me</span>
        <span
          class="text-3xl hover:text-blue-500 transition font-bold text-zinc-600"
          >(please don't, I'm shy)</span
        >
      </div>
      <div class="mt-10 flex flex-row gap-5">
        <button
          class="px-5 py-3 font-bold text-md border border-white border-2 bg-white text-zinc-800 rounded-full flex items-center gap-3"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-github"
            ><path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
          >
          GitHub</button
        >
        <button
          class="px-5 py-3 font-bold text-md border border-white border-2 bg-white text-zinc-800 rounded-full flex items-center gap-3"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-instagram"
            ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path
              d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
              x1="17.5"
              x2="17.51"
              y1="6.5"
              y2="6.5"></line></svg
          >
          Instagram</button
        >
      </div>
    </div>
  </body>
</html>
