---
const { name, description, technologies, demoLink, repoLink } = Astro.props;
import Tag from "./Tag.astro";
---

<div class="group">
  <div
    class="p-7 border border-2 transition justify-stretch self-stretch hover:border-blue-500 border-zinc-700 w-full rounded-md"
  >
    <h3 class="group-hover:text-blue-500 transition text-3xl font-black">
      {name}
    </h3>
    <p class="leading-6 mt-5 text-lg font-bold text-zinc-400">{description}</p>
    <p class="font-bold mt-10 text-xl">Technologies Used</p>
    <div class="technologies leading-2 flex flex-wrap gap-3 mt-3">
      {technologies.map((tech) => <Tag text={tech} />)}
    </div>
    <div class="buttons mt-10 flex gap-3 relative">
      <button
        class={demoLink !== null
          ? "w-full px-5 py-5 rounded-md bg-blue-500 text-white font-bold"
          : "w-full px-5 py-5 rounded-md bg-blue-400 text-white font-bold"}
        disabled={demoLink == null}
        >{demoLink == null ? "Demo Not Available" : "View Demo"}</button
      >
      <button class="w-full font-bold text-blue-500">View on GitHub</button>
    </div>
  </div>
</div>
