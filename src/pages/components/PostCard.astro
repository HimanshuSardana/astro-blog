---
const { title, date, url } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-US");
---

<a href={url} class="group"
  ><div
    class="card px-7 py-5 rounded-md hover:border-blue-500 transition flex flex-col justify-center gap-5 border border-2 border-zinc-700"
  >
    <h3 class="group-hover:text-blue-500 font-bold text-3xl">{title}</h3>
    <span class="font-bold text-zinc-500">{formattedDate}</span>
  </div></a
>
